<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adiagne.tocus.SettingsActivity"
    android:background="#ff000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Use WIFI only"
            android:id="@+id/checkBox"
            android:checked="false"
            android:textColor="#ff000000"
            android:layout_weight="0.72"
            android:textSize="18dp"
            android:background="#ffffffff"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Background Refresh"
            android:id="@+id/checkBox3"
            android:checked="false"
            android:textColor="#ff000000"
            android:textSize="18dp"
            android:background="#ffffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:showDividers="beginning|middle|end"
        android:layout_alignParentBottom="false"
        android:gravity="bottom"
        android:layout_below="@+id/linearLayout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:id="@+id/button4"
            android:background="#ffff0b00"
            android:textColor="#fffffbff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:onClick="toMy" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:baselineAligned="false">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/button3"
                android:background="#ffffffff"
                android:textColor="#ffff0011"
                android:textStyle="bold"
                android:textSize="18dp"
                android:onClick="cancel"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save changes"
                android:id="@+id/button2"
                android:textColor="#ffffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#ff8f8f8b"
                android:onClick="saveChanges"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
